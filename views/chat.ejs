function listenChartDataInput() {
// preview chart to insert
  $('.chart-data-input').dblclick(function() {
    var xAxis = $('.chart-data-axis').val().split(' ');
    if (xAxis.length < 2) return;
    // console.log(xAxis)
    var datas = [];
    var colors = [
      {
        fillColor: 'rgba(220,220,220,0.5)',
        strokeColor: 'rgba(220,220,220,1)',
        pointColor: 'rgba(220,220,220,1)',
      },
      {
        fillColor: 'rgba(151,187,205,0.5)',
        strokeColor: 'rgba(151,187,205,1)',
        pointColor: 'rgba(151,187,205,1)',
      }
    ];
    $('.chart-data-val').each(function(index, element) {
      var columnData = $(this).val().split(' ').map(Number);
      if (columnData.length != xAxis.length) return;
      // console.log(columnData);
      datas.push(
        {
          fillColor : colors[index].fillColor,
          strokeColor: colors[index].strokeColor,
          pointColor: colors[index].pointColor,
          pointStrokeColor : "#fff",
          data: columnData
        }
      );
    });
    // console.log(datas);
    var lineData = {
      labels: xAxis,
      datasets: datas
    };
    var previewCtx = $('#chart-preview').get(0).getContext('2d');
    new Chart(previewCtx).Line(lineData);
  });
}
